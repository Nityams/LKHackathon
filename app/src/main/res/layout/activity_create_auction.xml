<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackmesenpai.com.myapplication.CreateAuction">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/file2"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="154dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Item name"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Item DIscription"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="asking price"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:background="@color/light_green"
            android:onClick="publish"
            />
    </LinearLayout>

    <Button
        android:layout_width="@dimen/bottomIcon"
        android:layout_height="@dimen/bottomIcon"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/marginGap"
        android:layout_marginLeft="10dp"
        android:onClick="homePage"
        />

    <Button
        android:layout_width="@dimen/bottomIcon"
        android:layout_height="@dimen/bottomIcon"
        android:background="@drawable/cloud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/marginGap"
        android:onClick="upload"


        />
    <Button
        android:layout_width="@dimen/bottomIcon"
        android:layout_height="@dimen/bottomIcon"
        android:background="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/marginGap"
        android:layout_marginRight="10dp"
        android:onClick="userProfile"
        />



</android.support.constraint.ConstraintLayout>
